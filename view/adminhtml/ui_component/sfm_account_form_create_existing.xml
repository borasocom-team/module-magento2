<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sfm_account_form_create_existing.account_form_data_source</item>
            <item name="deps" xsi:type="string">sfm_account_form_create_existing.account_form_data_source</item>
            <item name="namespace" xsi:type="string">sfm_account_form_create_existing</item>
            <item name="dataScope" xsi:type="string">data</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">ShoppingFeed\Manager\Block\Adminhtml\Base\Edit\BackButton</item>
            <item name="reset" xsi:type="string">ShoppingFeed\Manager\Block\Adminhtml\Base\Edit\ResetButton</item>
            <item name="save" xsi:type="string">ShoppingFeed\Manager\Block\Adminhtml\Account\Edit\SaveButton</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="account_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">ShoppingFeed\Manager\Ui\EmptyDataProvider</argument>
            <argument name="name" xsi:type="string">account_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">account_id</argument>
            <argument name="requestFieldName" xsi:type="string">account_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/create_existing"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="account">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataScope" xsi:type="string">account</item>
                <item name="label" xsi:type="string" translate="true">Account</item>
            </item>
        </argument>
        <field name="use_api_token">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">1</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">I Know the Account API Token</item>
                </item>
            </argument>
        </field>
    </fieldset>



    <fieldset name="account">

        <field name="use_api_token" formElement="checkbox">

            <settings>

                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>${$.parentName}.api_token</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="1">
                                    <target>${$.parentName}.shopping_feed_login</target>
                                    <callback>show</callback>
                                </action>
                                <action name="2">
                                    <target>${$.parentName}.shopping_feed_password</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>${$.parentName}.api_token</target>
                                    <callback>show</callback>
                                </action>
                                <action name="1">
                                    <target>${$.parentName}.shopping_feed_login</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="2">
                                    <target>${$.parentName}.shopping_feed_password</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="api_token" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">API Token</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="shopping_feed_login" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Shopping Feed Account Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="shopping_feed_password" formElement="input">
            <settings>
                <dataType>password</dataType>
                <elementTmpl>ShoppingFeed_Manager/form/element/password</elementTmpl>
                <label translate="true">Shopping Feed Password</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="store">
        <settings>
            <dataScope>store</dataScope>
            <label translate="true">Store</label>
        </settings>
        <field name="import_main_store" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Import the Account Main Store</label>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>${$.parentName}.base_store_id</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>${$.parentName}.base_store_id</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="base_store_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Store\Ui\Component\Listing\Column\Store\Options</item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Associated Store View</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
